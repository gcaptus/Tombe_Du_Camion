{% extends 'base.html.twig' %}

{% block body %}

 
   

<h1>Les promos tombées du camion !</h1>

    <h2>Ventes flash</h2>
{% for vf in venteflash %}            
    <li><strong> Produit <a href="fiche/{{ vf.designation }}">{{ vf.designation }}</a>  Fabriqué par {{ vf.brand }} : </strong></li>
    <li> - Prix d'achat : {{vf.buyingPrice}} Euros / Prix de vente : {{vf.sellingPrice}} Euros</li>
    <li>- Quantité disponible : {{vf.quantity}}</li>
    <li>{{ dump(vf) }}</li>
{% endfor %}

    <h2>Promos</h2>
{% for p in promo %}            
    <li><strong> Produit <a href="fiche/{{ p.designation }}">{{ p.designation }}</a> Fabriqué par {{ p.brand }} : </strong></li>
